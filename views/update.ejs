<%- include('partials/header'); -%>
    <h1>Update</h1>
    <br>
    <form action="/update/<%=ID%>" method="post">
        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">Title</label>
            <input type="text" class="form-control" id="exampleFormControlInput1" value="<%=Title%>" name="postTitle">
          </div>
          <br>
          <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">Post</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="10" name="postBody"><%=Contant%></textarea>
          </div>
          <br>
          <button type="submit" class="btn btn-primary">Save</button>
    </form>

<%- include('partials/footer'); -%>