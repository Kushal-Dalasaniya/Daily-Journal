<%- include('partials/header'); -%>
    <h1><%=title%></h1>

    <% arr.forEach(function(ele){ %>
        <div class="con"> 
            <h1><%=ele.title%></h1>
            <p><%= ele.contant.substring(1, 100) + "... " %>
                <% if(title=="Home"){ %>
                    <a href="/Home/<%=ele._id%>">Read more</a>
                <%}%>
                <% if(title!="Home") {%>
                    <a href="/posts/<%=ele._id%>">Read more</a>
                <%}%>
            </p>
        </div>
    <% }); %>

<%- include('partials/footer'); -%>